pipeline {
    agent any

    stages {
        stage('Backup') {
            steps {
                sh 'sqlite3 Employees.db .dump | grep "^INSERT INTO" backupAux.sql > backup.sql'
            }
        }
        stage('Erase DB') {
            steps {
                sh 'rm Employees.db'
            }
        }
        stage('New Schema') {
            steps {
                sh 'sqlite3 Employees.db < sqlite.sql'
            }
        }
        stage('Restore Data') {
            steps {
                sh 'sqlite3 Employees.db < backup.sql'
            }
        }
    }
}
