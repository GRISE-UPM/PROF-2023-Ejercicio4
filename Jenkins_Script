pipeline {
    agent any

    stages {
        stage('Database Maintenance') {
            steps {
                script {
                    sh 'wget -O Employees.db https://github.com/Palid0/PROF-2023-Ejercicio4/blob/main/Employees.db'

                    // Data backup
                    sh 'sqlite3 Employees.db ".dump" > backup.sql'

                    // Update Data
                    sh 'rm Employees.db'
                    sh 'sqlite3 Employees.db < sqlite.sql'

                    // Restore previous data
                    sh 'sqlite3 Employees.db < backup.sql'
                    
                }
            }
        }
        stage('Github Notify'){
            steps {
                GITHUB_API_URL="https://api.github.com/repos/Palid0/PROF-2023-Ejercicio4/statuses/$(git rev-parse HEAD)"
                ACCESS_TOKEN="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"

                # Estado exitoso
                STATUS="success"
                DESCRIPTION="Mantenimiento de base de datos exitoso"
                CONTEXT="continuous-integration/jenkins"

                # Enviar estado a GitHub
                sh 'curl -s -H "Authorization: token $ACCESS_TOKEN" -d "{\"state\": \"$STATUS\", \"description\": \"$DESCRIPTION\", \"context\": \"$CONTEXT\"}" $GITHUB_API_URL'
            }
        }
    }

    post {
        success {
            script {
                currentBuild.result = 'SUCCESS'
                echo 'Database maintenance successful!'
            }
        }
        failure {
            script {
                currentBuild.result = 'FAILURE'
                echo 'Database maintenance failed!'
            }
        }
    }
}
